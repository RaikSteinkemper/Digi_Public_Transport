<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">

            <!-- Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:text="Initialisiere..."
                        android:textSize="13sp"
                        android:textColor="@color/text_primary"
                        android:scrollbars="vertical"
                        android:maxLines="6"
                        android:layout_marginTop="8dp"
                        android:background="@color/surface_variant"
                        android:padding="12dp"
                        android:typeface="monospace" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- QR Code Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/surface"
                android:id="@+id/qrCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR-CODE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary"
                        android:letterSpacing="0.1" />

                    <ImageView
                        android:id="@+id/qrImage"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerInside"
                        android:background="@color/surface_variant"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tokenText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:maxLines="3"
                        android:scrollbars="vertical"
                        android:layout_marginTop="12dp"
                        android:background="@color/surface_variant"
                        android:padding="8dp"
                        android:typeface="monospace" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Primary Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startBtn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="START FAHRT"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"
                app:backgroundTint="@color/success" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/endBtn"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="FAHRT BEENDEN"
                android:textSize="14sp"
                app:backgroundTint="@color/error" />
        </LinearLayout>

        <!-- Bill Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/billBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="RECHNUNG HEUTE"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/primary" />

        <!-- Debug Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEBUG"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.15"
                android:paddingStart="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/debugDeleteBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Fahrten\nLöschen"
                    android:textSize="11sp"
                    android:layout_marginEnd="4dp"
                    app:strokeColor="@color/error"
                    android:textColor="@color/error" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/debugClearPrefsBtn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Cache\nLöschen"
                    android:textSize="11sp"
                    app:strokeColor="@color/error"
                    android:textColor="@color/error" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
