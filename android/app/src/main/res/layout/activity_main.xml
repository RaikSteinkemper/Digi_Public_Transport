<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f0f0f0"
        android:text="Initializing..."
        android:textSize="12sp"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start (Manual)" />

        <Button
            android:id="@+id/endBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Session" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/billBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill Today" />
    </LinearLayout>

    <Button
        android:id="@+id/debugDeleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[DEBUG] Delete Today's Trips"
        android:textColor="#fff"
        android:backgroundTint="#d32f2f"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/debugClearPrefsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[DEBUG] Clear Local Cache"
        android:textColor="#fff"
        android:backgroundTint="#1976d2"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tokenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:layout_marginTop="16dp"
        android:background="#eeeeee"
        android:padding="8dp" />

</LinearLayout>
